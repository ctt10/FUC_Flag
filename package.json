{
  "name": "FUC-Flag",
  "description": "# This is an implementation of game -Place deployed on near blockchain",
  "license": "(MIT AND Apache-2.0)",
  "version": "0.0.1",
  "scripts": {
    "heroku-prebuild":"yarn dev",
    "dev:deploy:contract": "near dev-deploy --wasmFile=\"./build/release/contract.wasm\"",
    "deploy:contract": "near deploy",
    "deploy": "yarn deploy:contract && yarn deploy:pages",
    "prestart": "yarn deploy:contract",
    "start": "parcel src/index.html",
    "test": "yarn jest",
    "jest": "jest test",
    "dev": "yarn dev:deploy:contract && env-cmd -f ./neardev/dev-account.env parcel src/index.html"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "jest": "^26.6.3",
    "near-sdk-as": "^2.2.2",
    "near-cli": "^1.5.2",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {
    "near-api-js": "^0.36.2",
    "regenerator-runtime": "^0.13.7"
  },
  "jest": {
    "testEnvironment": "near-cli/test_environment",
    "testPathIgnorePatterns": [
      "<rootDir>/assembly/",
      "<rootDir>/node_modules/"
    ]
  }
}
